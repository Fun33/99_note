**session的使用
            Session["Login"] = "Y";
            Response.Write("<script>window.location.href='welcome.aspx';</script>");

            if (Session["Login"]==null)
                Response.Write("<script>window.location.href='login.aspx';</script>");

            if (Session ["Login"]!="Y")
                Response.Write("<script>window.location.href='login.aspx';</script>");

